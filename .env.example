# ===========================================
# TwinCountyMediaAgent Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For Railway deployment, add these in the Variables section

# Database Configuration
# Railway provides DATABASE_URL automatically when you add PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/twincounty_agent
DATABASE_MIN_POOL_SIZE=2
DATABASE_MAX_POOL_SIZE=10

# Anthropic Claude API
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096

# Bright Data Configuration (for social media scraping)
# Sign up at: https://brightdata.com/
# Use the "Social Media Scraper" product
# Get API key from: Dashboard > Account Settings > API Tokens
BRIGHT_DATA_API_KEY=your_bright_data_api_key_here
BRIGHT_DATA_CUSTOMER_ID=your_customer_id_here

# Mailchimp Configuration
# Get your API key from: Account > Extras > API Keys
# The server prefix is the part after the dash in your API key (e.g., us6)
# Find your List ID: Audience > Settings > Audience name and defaults
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us6
MAILCHIMP_LIST_ID=your_audience_list_id_here
MAILCHIMP_FROM_NAME=Twin County Weekly
MAILCHIMP_REPLY_TO=newsletter@yourdomain.com

# Manager/Preview Settings
# This email receives the draft newsletter for review before final send
MANAGER_EMAIL=your_email@example.com
PREVIEW_DELAY_HOURS=2

# Newsletter Schedule
# Day of week and time (24h format) to generate newsletter
NEWSLETTER_DAY=thursday
NEWSLETTER_HOUR=8
NEWSLETTER_MINUTE=0

# Application Settings
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=False

# Scraping Settings
SCRAPE_FREQUENCY_HOURS=6
CONTENT_LOOKBACK_DAYS=7
MAX_ITEMS_PER_SOURCE=20

# Feature Flags
ENABLE_SOCIAL_SCRAPING=True
ENABLE_COUNCIL_SCRAPING=True
AUTO_SEND_AFTER_PREVIEW=True
